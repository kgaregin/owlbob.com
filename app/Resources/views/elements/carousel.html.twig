<div id="carousel{{ composition_instance.composition_id }}" class="carousel slide marginTop10" data-ride="carousel" data-interval="false">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

        {% for file in composition_instance.files %}

            <div class="item {% if loop.first %}active{% endif %}">


                <img src="/{{ config.scores_dir }}{{ composition_instance.path }}/{{ file['filename'] }}" alt="{{ file['filename'] }}">
                <!-- in case we would need caption someways
                <div class="carousel-caption">
                    {{ file['page'] }}
                </div>
                -->
            </div>
        {% endfor %}
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel{{ composition_instance.composition_id }}" role="button" data-slide="prev">
        <span class="glyphicon icon-prev" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel{{ composition_instance.composition_id }}" role="button" data-slide="next">
        <span class="glyphicon icon-next" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>