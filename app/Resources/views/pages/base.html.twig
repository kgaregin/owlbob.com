<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="Musical Scores. Free download. Music articles and discussion.">
    <meta name="author" content="K.Garegin and G.Anatoly">
    <link rel="icon" type="image/x-icon" href="{{ asset('pictures/favicon.png') }}">

    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="{{ asset('css/bootstrap_3.3.6.min.css') }}">
        <!-- CWO core CSS -->
        <link rel="stylesheet" href="{{ asset('css/cwo_gt_2.0.css') }}">
    {% endblock %}

    <!-- Some additional utility -->
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <link rel="stylesheet" href="{{ asset('js/ie10-viewport-bug-workaround.js') }}">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="{{ asset('js/html5shiv.min.js') }}"></script>
    <script src="{{ asset('js/respond.min.js') }}"></script>
    <![endif]-->
</head>

<body>
<!-- Header -->
<nav class="navbar navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Smusify.com</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li><a href="{{ config.domain }}authors">Authors</a></li>
                <li><a href="{{ config.domain }}about">About</a></li>
            </ul>
        </div>
        <!--/.nav-collapse -->
    </div>
</nav>
<!-- Header end.-->

<!-- Content container -->
{% block body %}

{% endblock %}

<!-- Content container end. -->

<!-- Footer -->
<footer class="footer">
    <div class="container">
        <p class="text-muted">Place sticky footer content here.</p>
    </div>
</footer>
<!-- Footer end. -->
{% block javascripts %}
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ asset('js/jquery_1.11.3.min.js') }}"></script>
    <script>window.jQuery || document.write('<script src="{{ asset('js/jquery_1.11.3.min.js') }}"><\/script>')</script>
    <script src="{{ asset('js/bootstrap_3.3.6.min.js') }}"></script>
    <script src="{{ asset('js/cwo_gt_2.0.js') }}"></script>
{% endblock %}
</body>
</html>

